{
  "project_name": "Your Project Name",
  "version": "4.1.0",
  "description": "RL PostFlow - Pipeline d'intÃ©gration LucidLink â†’ Frame.io",
  
  "discord": {
    "webhook_url": "",
    "channel_name": "postproduction",
    "notifications_enabled": false,
    "bot_name": "RL PostFlow Bot",
    "avatar_url": "https://cdn.discordapp.com/emojis/ðŸŽ¬.png"
  },
  
  "lucidlink": {
    "base_path": "/path/to/lucidlink/mount",
    "volume_name": "your-volume-name",
    "auto_verify_sources": true,
    "create_directories": true,
    "supported_extensions": [".mov", ".mp4", ".avi", ".mkv", ".prores", ".mxf", ".r3d", ".braw"],
    "min_file_size": 1048576,
    "processing_delay": 10,
    "stability_timeout": 30
  },
  
  "frameio": {
    "upload_enabled": true,
    "base_url": "https://api.frame.io/v4",
    "max_concurrent_uploads": 3,
    "chunk_size": 8388608,
    "retry_attempts": 3,
    "retry_delay": 30,
    "timeout": 300
  },
  
  "google": {
    "drive": {
      "upload_enabled": true,
      "thumbnails_folder": "thumbnails",
      "max_file_size": 104857600
    },
    "sheets": {
      "update_enabled": true,
      "worksheet_name": "PostFlow",
      "auto_resize": true
    }
  },
  
  "processing": {
    "thumbnail": {
      "enabled": true,
      "width": 1920,
      "height": 1080,
      "quality": 85,
      "format": "jpg",
      "timestamp": "00:00:05"
    },
    "queue": {
      "max_size": 100,
      "max_concurrent": 3,
      "retry_attempts": 3,
      "retry_delay": 30
    }
  },
  
  "dashboard": {
    "enabled": true,
    "port": 8080,
    "host": "localhost",
    "auto_open": false,
    "refresh_interval": 5
  },
  
  "logging": {
    "level": "INFO",
    "file": "logs/postflow.log",
    "max_size": 10485760,
    "backup_count": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  
  "watcher": {
    "scan_interval": 5,
    "file_stability_check": true,
    "stability_wait_time": 5,
    "move_processed_files": false,
    "move_failed_files": true
  },
  
  "nomenclature": {
    "pattern": "SQ{scene_number:02d}_{shot_name}_{shot_number:05d}_v{version:03d}",
    "required_fields": ["scene_number", "shot_name", "shot_number", "version"],
    "validation": {
      "strict_mode": true,
      "case_sensitive": false,
      "allowed_shot_names": ["UNDLM"]
    }
  }
}
