{
  "hostinger": {
    "enabled": true,
    "site_url": "https://votre-site.com",
    "ftp": {
      "host": "ftp.votre-site.com",
      "port": 21,
      "username": "votre-username",
      "password": "votre-password",
      "use_ssl": false
    },
    "sftp": {
      "host": "votre-site.com",
      "port": 22,
      "username": "votre-username",
      "password": "votre-password",
      "private_key_path": null
    },
    "upload": {
      "method": "ftp",
      "remote_path": "/public_html/thumbnails",
      "url_base": "https://votre-site.com/thumbnails",
      "create_directories": true,
      "file_permissions": "644",
      "directory_permissions": "755",
      "timeout": 30,
      "retry_attempts": 3,
      "retry_delay": 2
    },
    "thumbnails": {
      "organize_by_date": true,
      "date_format": "%Y/%m",
      "file_naming": "{shot_id}_{version}_{timestamp}.jpg",
      "max_file_size_mb": 5,
      "allowed_extensions": [".jpg", ".jpeg", ".png", ".webp"],
      "quality": 85,
      "cleanup_old_files": false,
      "cleanup_days": 30
    }
  }
}
